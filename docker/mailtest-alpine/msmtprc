# Set default values for all following accounts.
defaults
auth           off
tls            off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog         on

# root
account        root
host           localhost
port           587
from           root@localhost
user           root@localhost
password       1234

# Set a default account
account default : toc
aliases        /etc/aliases

